<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Cadastrar Pedido"
             x:Class="PassaRegua.CadastroPedido">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pessoa" />
            <Picker x:Name="pkrPessoa" Title="Selecione a pessoa" SelectedIndexChanged="OnPessoa_Change" />

            <Label Text="Produto" />
            <Entry x:Name="txtProduto" />

            <Label Text="Valor" />
            <Entry x:Name="txtValor" Placeholder="0,00" Keyboard="Numeric" />

            <Button Text="Gravar" Clicked="BotaoGravarPedido_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>